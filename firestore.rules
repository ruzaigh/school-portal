rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - only authenticated admin users can read/write
    match /users/{userId} {
      // Allow read access to all authenticated users (for user listing)
      allow read: if request.auth != null;
      
      // Allow write access only to admin users
      // Note: You'll need to implement admin role checking based on your requirements
      // This is a basic implementation - in production, you should verify admin status
      allow write: if request.auth != null 
        && request.auth.uid != null
        && (
          // Allow users to be created by any authenticated user (for admin invite functionality)
          // In production, add proper admin role verification here
          resource == null ||
          // Allow updates only by admin users
          request.auth.uid == resource.data.createdBy ||
          request.auth.uid == resource.data.updatedBy
        );
    }
    
    // School data collections (existing functionality)
    match /schoolData/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}